@{
    Layout = null;
}

<div class="new-info">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Yeni<span> Ürünler</span></h3>
            <p>Tüm ikinci el ve sıfır bilgisayar ve bilgisayar malzemeleri burada </p>
        </div>

        <div class="gallery-info">
            @{
                int index = 0;
                foreach (var urun in Model)
                {
                    index += 1;

                    <div class="col-md-3 gallery-grid wow flipInY animated" data-wow-delay=".5s">
                        <a href="/Product/Details/@urun.id"><img src="@urun.ResimYolu" class="img-responsive" alt="" /></a>
                        <div class="gallery-text simpleCart_shelfItem">
                            <h5><a class="name" href="/Product/Details/@urun.id">@urun.Baslik </a></h5>
                            <p><span class="item_price">@urun.Fiyat TL </span></p>

                            <ul>
                                <li><a href="#"><span class="glyphicon glyphicon-globe" aria-hidden="true"></span></a></li>
                                <li><a class="item_add" href="#"><span class="glyphicon glyphicon glyphicon-shopping-cart" aria-hidden="true"></span></a></li>
                                <li><a href="#"><span class="glyphicon glyphicon glyphicon-heart-empty" aria-hidden="true"></span></a></li>
                            </ul>
                        </div>
                    </div>

                    if (index % 4 == 0)
                    {
                        <div class="clearfix"></div>
                    }
                }
            }

        </div>

    </div>

        <div class="clearfix"> </div>
    </div>
