@{
    Layout = null;
}

<!--gallery-->
<div class="gallery">
    <div class="container">
        <div class="title-info wow fadeInUp animated" data-wow-delay=".5s">
            <h3 class="title">Popüler<span> Ürünler</span></h3>
            <p>Tüm ikinci el ve sıfır bilgisayar ve bilgisayar malzemeleri burada </p>
        </div>
        <div class="gallery-info">
            @{
                int index = 0;
                foreach (var urun in Model)
                {
                    index += 1;

                    <div class="col-md-3 new-grid simpleCart_shelfItem wow flipInY animated" data-wow-delay=".5s">
                        <div class="new-top">
                            <a href="/Product/Details/@urun.id"><img src="@urun.ResimYolu" class="img-responsive" alt="" /></a>
                            <div class="new-text">
                                <ul>
                                    <li>
                                        <p class="button item_add">
                                            @Html.ActionLink("Sepete Ekle", "AddToCart", "CartDetail", new { id = urun.id }, "")
                                        </p>
                                    </li>

                                    <li><a href="Product/Details/@urun.id">Ürüne Git </a></li>
                                    <li><a href="Product/All">Tüm Ürünler </a></li>
                                </ul>
                            </div>
                        </div>
                        <div class="new-bottom">
                            <h5><a class="name" href="/Product/Details/@urun.id">@urun.Baslik</a></h5>
                            <div class="rating">
                                @for (int puan = 0; puan < urun.Puanlama; puan++)
                                {
                                    <span class="on">☆</span>
                                }
                                @for (int puan = urun.Puanlama; puan < 5; puan++)
                                {
                                    <span>☆</span>
                                }

                            </div>
                            <div class="ofr">
                                <p><span class="item_price">@urun.Fiyat TL</span></p>
                            </div>
                        </div>
                    </div>
                    if (index % 4 == 0)
                    {
                        <div class="clearfix"></div>
                    }
                }

            }

        </div>
        <div class="clearfix"></div>

    </div>
</div>
<!--//gallery-->
